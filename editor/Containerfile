FROM debian
FROM node:22-bookworm-slim@sha256:ec318fe0dc46b56bcc1ca42a202738aeb4f3e347a7b4dd9f9f1df12ea7aa385a AS build-editor

RUN apt update -y
COPY ./editor /src
WORKDIR /src
RUN npm install
RUN npm run build

FROM node:22-bookworm-slim@sha256:ec318fe0dc46b56bcc1ca42a202738aeb4f3e347a7b4dd9f9f1df12ea7aa385a AS deploy
WORKDIR /deploy
COPY --from=build-editor /src/build/ ./build
COPY --from=build-editor /src/package.json .
COPY --from=build-editor /src/package-lock.json .
RUN npm ci --omit dev

CMD ["node", "build"]
